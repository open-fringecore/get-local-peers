{
  "compilerOptions": {
    "target": "ES2022",                     // Supports top-level await + modern syntax
    "module": "NodeNext",                   // Correct for ESM in Node
    "moduleResolution": "NodeNext",         // Must match "module"
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}

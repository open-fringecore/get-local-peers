{
    "$schema": "https://turborepo.com/schema.json",
    "ui": "tui",
    "tasks": {
        "watch": {
            "outputs": [".dist/**"],
            "cache": false,
            "persistent": true
        },
        "start": {
            "dependsOn": ["^start"],
            "outputs": [".dist/**"]
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".dist/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
